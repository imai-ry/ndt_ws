<launch>
  <node pkg="pcl_ros" type="pointcloud_to_pcd" name="pointcloud_to_pcd" output="screen">
    <remap from="input" to="/ndt_map" />
    <param name="prefix" value="$(find ndt_mapping)/pcd/ndt_map_" />
    <param name="fixed_frame" value="map" />
    <param name="binary" value="true" />
    <param name="compressed" value="false" />
  </node>
</launch>
